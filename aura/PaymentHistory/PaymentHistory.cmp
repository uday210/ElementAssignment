<aura:component
                implements="flexipage:availableForRecordHome,force:hasRecordId"
                access="global"
                controller="Element_PaymentDataCtrl"
                >
    <!-- attributes -->
    <aura:attribute name="data" type="Object" />
    <aura:attribute name="columns" type="List" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <div style="">
    <lightning:recordEditForm
                              onsuccess="{!c.handleSuccess}"
                              recordId="{!v.recordId}"
                              onsubmit="{!c.handleSubmit}"
                              onerror="{!c.handleError}"
                              objectApiName="Case"
                              aura:id="caseForm"
                              >
        <lightning:outputField fieldName="Payment_history_Synced_On__c" />
        <div style="display:none">
        	<lightning:inputField fieldName="Payment_history_Synced_On__c" />
        </div>
        <lightning:button
                          variant="brand"
                          type="submit"
                          name="Sync Payment History"
                          label="Sync Payment History"
                          />
    </lightning:recordEditForm>
    </div>    
    <lightning:datatable
                         keyField="id"
                         data="{! v.data }"
                         columns="{! v.columns }"
                         hideCheckboxColumn="true"
                         />
</aura:component>